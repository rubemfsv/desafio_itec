<%= render "devise/shared/navbar" %>

<div class="jumbotron text-center">

<h1>Pedidos</h1>

</div>

<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Código</th>
      <th>Descrição</th>
      <th>Usuário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.title %></td>
        <td><%= pedido.body %></td>
        <td><%= pedido.user.nome %></td>
        <td><%= link_to 'Mostrar', pedido %></td>
        <% if current_user %>
          <td><%= link_to 'Editar', edit_pedido_path(pedido) %></td>
          <td><%= link_to 'Deletar', pedido, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
</div>

